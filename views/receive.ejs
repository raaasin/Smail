<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Smail - Receive</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="../css/style.css">
  <style>
    body {
    background-color: #222;/* Dark gray background */
    color: #00ff00; /* Matrix green text */
}

/* Apply dark color palette to containers and cards */
.container, .card {
    background-color: #222; /* Darker gray background */
    color: #00ff00;
    border-radius: 10px;
    padding: 20px;
    margin-top: 20px;
}

/* Apply dark color palette to form elements */
.form-group, label, input, textarea, button {
    color: #00ff00;
}

/* Apply dark color palette to buttons */
.btn {
    background-color: #333; /* Darker gray background for buttons */
    color: #00ff00;
}

/* Apply dark color palette to links */
a {
    color: #00ff00;
}

/* Add more styles as needed */

</style>
</head>
<body>
  <div style="display: flex; flex-direction: row; width: 100vw; height: 100vh;">
    <div class="container" style="width: 50vw;">
      <span style="justify-content: space-between; flex-direction: row; display: flex;">
        <h1>Your smails</h1>
      </span>
      <!-- SMails will pop up as a stack here -->
      <div id="receivedEmailsContainer">
        <% emails.forEach(email => { %>
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">From: <%= email.sender %></h5>
              <p class="card-text"><%= email.message %></p>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </div>

  <div class="container fixed-bottom">
    <div class="row justify-content-center">
      <div class="col-md-4">
        <a href="/logout" class="btn btn-danger btn-block">Logout</a>
      </div>
      <div class="col-md-4">
        <a href="/smailit" class="btn btn-primary btn-block">Compose</a>
      </div>
      <div class="col-md-4">
        <a href="/sent" class="btn btn-primary btn-block">Sent</a>
      </div>
    </div>
  </div>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
